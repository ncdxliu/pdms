<?xml version="1.0" encoding="UTF-8"?>
<!-- OFF < FATAL < ERROR < WARN < INFO < DEBUG < TRACE < ALL -->
<configuration status="INFO">
	<Properties>
		<Property name="LOG_HOME">${sys:log.home}</Property>
		<Property name="LOG_NAME">pdms</Property>
	</Properties>
	<appenders>
	    <!-- 输出到控制台 -->
		<Console name="console" target="SYSTEM_OUT">
		    <!-- %-d{yyyy-MM-dd HH:mm:ss} [%F:%L]-[%p] %m%n -->
			<PatternLayout charset="UTF-8"
				pattern="%d{yyyy-MM-dd HH:mm:ss} %-3level [%thread][%file:%line] - %msg%n" />
		</Console>
		
		<!-- 输出到滚动文件 -->
		<RollingFile name="log" fileName="${LOG_HOME}/${LOG_NAME}.log"
			filePattern="${LOG_HOME}/${LOG_NAME}.%d{yyyy-MM-dd}.log" append="true">
			<PatternLayout charset="UTF-8"
				pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread][%file:%line] - %msg%n" />
			<Policies>
			    <!-- 按时间来切分，且interval的单位要视filePattern的配置来的定，本例中是按天，因为yyyy-MM-dd是配置到了天 -->
				<TimeBasedTriggeringPolicy modulate="true" interval="1" />
				
				<!-- 表示按照大小滚动,超过大小则滚动，每滚动一次则filePattern中的配置%i的值会加一 -->
				<!-- <SizeBasedTriggeringPolicy size="250 MB"/> -->
				<!-- cron类型的切分，定时切分 -->
				<!-- <CronTriggeringPolicy schedule="0 0 * * * ?"/> -->
			</Policies>
			<DefaultRolloverStrategy max="180" />
		</RollingFile>
	</appenders>
	
	<loggers>
		<!-- 将业务dao接口填写进去,并用控制台输出即可 -->
		<logger name="com.dnliu.pdms.dao" level="INFO" additivity="false"/>

		<!-- <logger name="com.alibaba.druid.pool" level="INFO" additivity="false"/> -->

		<root level="INFO">
			<appender-ref ref="console" />
			<appender-ref ref="log" />
		</root>
	</loggers>
</configuration>
